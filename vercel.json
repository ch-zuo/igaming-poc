{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/dist/assets/$1"
        },
        {
            "source": "/login",
            "destination": "/frontend/dist/index.html"
        },
        {
            "source": "/",
            "destination": "/frontend/dist/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ],
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}